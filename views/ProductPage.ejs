    <div align="center" class="jumbotron jumbotron-fluid darktext">
    <h2 class="display-2 m-5">Product Page </h2>
  
</div>

<!-- Page Content -->
<div class="container-fluid">
<% if((product.length )>0){ %>

    <h1 class="my-4"> <%= title%> <%= product[0].brand %> <%= product[0].name %></h1>

  
    <!-- Product Item Row -->
    <div class="row">
  
      <div class="col col-md-4">
        <img class="w-100" src="<%= product[0].image %>" />
        <img class="img-fluid w-100 " src="<%= product.image %> " alt=""/>
      </div>
     
  
      <div class="col col-md-6">
        
            <h3 class="mb-2">Product Rating</h3><hr>
           <p> <%= product[0].rating %> </p>
          
           <% for (var i =0; i < 5;  i++ ) { %>

            <% if (i < product[0].rating) { %>
                 <span class="fa fa-star checked"></span>
                <%} else { %>
                    <span class="fa fa-star"></span>
                <% } %>
                    
                   
            <% } %>

                
            <br>
            
        <hr>

        <div class="ratings">
            <p class="pull-right"> reviews</p>
        </div>
        
        <h3 >Product Review </h3>
        <% product.forEach(function(product){ %>
        <p><%= product.remark %> </p>
      <h6 class ="float-right">    </h6>
      <hr>   
      <p>--<%= product.date %> </p> 
      <br>
      <% }); %>
      </div>

     <% } else{ %>
                <h2 class="product-header">No Reviews
                    to Display</h2>

                <%= console.log(product.length) %>
                <% } %>
    </div>
    <!-- /.row -->
    
    
  
  <!-- /.container -->

</div> 



    
